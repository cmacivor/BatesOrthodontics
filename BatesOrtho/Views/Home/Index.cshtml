@{
    ViewBag.Title = "Home Page";
}


            <section id="hero-image">
            <!-- Slideshow w/ Caption -->
            <div class="flexslider">
              <ul class="slides">
                <li class="mobile-slide">
                  <img src="images/slides/logo-slide.png">                
                </li>
                <li>
                  <img src="images/slides/img-1.jpg" width="100%">
                  <div class="caption">
                    <h1><a href="Home/Contact">Complementary Consultation</a></h1>
                  </div>
                </li>
                <li>
                  <img src="images/slides/img-2.jpg" width="100%">
                  <div class="caption">
                    <h1><a href="home/about#meet">Meet Dr. Bates</a></h1>
                  </div>
                </li>
                <li>
                  <img src="images/slides/img-3.jpg" width="100%">
                  <div class="caption">
                    <h1><a href="Home/AppointmentRequest">Financial Information</a></h1>
                  </div>
                </li>
              </ul>
            </div>
                
            </section>
            <section id="main-content">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12 text-center text-intro">
                            <h2>At Bates Orthodontics, our friendly, personal service sets us apart</h2>
                            <p class="feature-text">Welcome to our site! Please take a moment to look around.  My hope is that as you do, you will be able to see that at Bates Orthodontics, we are committed to serving our patients.  My staff and I strive to make your experience with orthodontics as enjoyable as possible.
                            ​<br />​<br />I am really excited to be a part of the Richmond community and I look forward to serving you doing what I absolutely love: Orthodontics.</p>
                        </div>
                    </div>
                </div>
                <section id="about" class="bg-2">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <h3>About Bates Orthodontics</h3>
                            </div>
                            <div class="col-md-4">
                                <a href="Home/Contact" class="feature-link">
                                    <span class="feature-img">
                                        <img src="images/home/complimentary-consultation.jpg" width="100%" class="img-col">
                                    </span>
                                    Request Your Complimentary Consultation
                                </a>
                            </div>
                            <div class="col-md-4">
                                <a href="home/about#meet" class="feature-link">
                                    <span class="feature-img">
                                        <img src="images/home/meet-dr.jpg" width="100%" class="img-col">
                                    </span>
                                    Meet Dr. Bates
                                </a>
                            </div>
                            <div class="col-md-4">
                                <a href="Home/AppointmentRequest" class="feature-link">
                                    <span class="feature-img">
                                        <img src="images/home/financial-info.jpg" width="100%" class="img-col">
                                    </span>
                                    Financial Information
                                </a>
                            </div>
                        </div>
                    </div>
                </section>
                <div id="blog" class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <h3>From our blog</h3>
                        </div>

                        <!-- Use ajax to funnel in most recent post -->
                        <div id="featuredBlogPhoto" class="col-md-8">                           
                            <img src="images/sample_blog_photo-post.jpg" width="100%">                          
                        </div>
                        <div id="featuredBlogContent" class="col-md-4">
                            <small>@Html.Raw(ViewBag.Date)</small>
                            
                            <h2 id="blogPostTitle">@Html.Raw(ViewBag.BlogTitle)</h2>
                            <p>@Html.Raw(ViewBag.Content)</p>
                        </div>
                        <!-- end ajax -->

                    </div>
                </div>
            </section><!-- /#main-content -->