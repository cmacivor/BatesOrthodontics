<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bates Orthodontics</title>
    
    @RenderSection("scripts", required: false)
    
    <link href='http://fonts.googleapis.com/css?family=Lato:300,400,700,400italic|Bree+Serif' rel='stylesheet' type='text/css'>
    <link href="http://netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    @Styles.Render("~/Content/css")
    <link href='@Url.Content("~/Content/normalize.css")' rel="stylesheet" type="text/css" media="screen">
    
    <link href='@Url.Content("~/Content/flexslider.css")' rel="stylesheet" type="text/css">
    <link href='@Url.Content("~/Content/datepicker.css")' rel="stylesheet" type="text/css" media="screen">

    @Scripts.Render("~/bundles/modernizr")

    @*<script src='@Url.Content("~/Scripts/CRUD.js")' type="text/javascript"></script>*@
</head>
<body>
    <div id="wrapper">
            <header id="header">
                <section id="top-header">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-5">
                                <p><span class="desktop">Call today to schedule</span><span class="mobile">Schedule</span> an appointment <span class="highlight-text"><a href="tel:8049349292">804-934-9292</a></span>
                            </div>
                            <div class="col-md-7 text-right">
                                <p>
                                    Get directions to our offices in <span class="highlight-text"><a href="https://www.google.com/maps/dir//3800+Stillman+Pkwy+%23101,+Richmond,+VA+23233/&#64;37.6401988,-77.5668509,17z/data=!4m13!1m4!3m3!1s0x89b16ab419c2f4c9:0xbac476ab40a473d1!2s3800+Stillman+Pkwy+%23101,+Richmond,+VA+23233!3b1!4m7!1m0!1m5!1m1!1s0x89b16ab419c2f4c9:0xbac476ab40a473d1!2m2!1d-77.5668509!2d37.6401988" target="_blank">Richmond</a> <small>&amp;</small> <a href="https://www.google.com/maps/dir//Mechanicsville+Turnpike,+Richmond,+VA/&#64;37.5724326,-77.3991067,17z/data=!4m13!1m4!3m3!1s0x89b117412446b4e7:0xdc8fb25d7506b482!2sMechanicsville+Turnpike,+Richmond,+VA!3b1!4m7!1m0!1m5!1m1!1s0x89b117412446b4e7:0xdc8fb25d7506b482!2m2!1d-77.3991067!2d37.5724326" target="_blank">Mechanicsville</a></span>
                                </p>
                            </div>
                        </div>
                    </div>
                </section>

                <nav id="banner" class="navbar navbar-default" role="navigation">             
                  <div class="container">
                    <div class="navbar-header">
                      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-nav">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                      </button>
                      <a class="navbar-brand" href="/">
                        <img src="~/images/logo.png" alt="logo" title="Bates Orthodontics">
                      </a>
                    </div>

                    <div class="collapse navbar-collapse" id="main-nav">
                      <ul class="nav navbar-nav right">
                        <li>@Html.ActionLink("About", "About")</li>
                        <li>@Html.ActionLink("New Patients", "Patients", "Home")</li>
                        <li>@Html.ActionLink("Appointments", "AppointmentRequest", "Home")</li>
                        <li><a href="http://blog.bates-orthodontics.com/">Blog</a></li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                      </ul>
                    </div><!-- /.navbar-collapse -->
                  </div>
                </nav>          
            </header><!-- /#header -->



        <div class="body-content">


    <div class="body-content">


        @RenderBody()


            <footer id="footer">
                <div class="container">
                    <div class="row">
                        <div id="social" class="col-md-4">
                            <h4>Bates Orthodontics</h4>
                            <p>Sheldon A. Bates, DMD<br />
                                (804)-934-9292</p>
                            <ul class="clearfix">
                                <li class="fb"><a href="https://www.facebook.com/BatesOrthodontics?sk=app_129982580378550" target="_blank"><img src="~/images/fb.png" width="100%"></a></li>
                                <li class="tw"><a href="" target="_blank"><img src="~/images/tw.png" width="100%"></a></li>
                                <li class="gplus"><a href="https://plus.google.com/+Bates-orthodontics/about" target="_blank"><img src="~/images/gp.png" width="100%"></a></li>
                            </ul>
                            
                        </div>
                        <div class="col-md-4 footer-map">
                            <h4>West End Office</h4>
                            <p>3800 Stillman Pkwy, Suite 101<br />
                                Richmond, VA 23233<br />
                                (804)-934-9292</p>
                            <a href="https://www.google.com/maps/dir//3800+Stillman+Pkwy+%23101,+Richmond,+VA+23233/&#64;37.6401988,-77.5668509,17z/data=!4m13!1m4!3m3!1s0x89b16ab419c2f4c9:0xbac476ab40a473d1!2s3800+Stillman+Pkwy+%23101,+Richmond,+VA+23233!3b1!4m7!1m0!1m5!1m1!1s0x89b16ab419c2f4c9:0xbac476ab40a473d1!2m2!1d-77.5668509!2d37.6401988" target="_blank"><img src="~/images/map-rva.jpg" width="90%"></a>
                        </div>
                        <div class="col-md-4 footer-map">
                            <h4>Mechanicsville Office</h4>
                            <p>​4025 Mechanicsville Turnpike<br />Richmond, VA 23223<br />
                            (804)-321-4958</p>
                            <a href="https://www.google.com/maps/dir//4025+Mechanicsville+Turnpike,+Richmond,+VA+23223/&#64;37.5797219,-77.393072,17z/data=!4m13!1m4!3m3!1s0x89b1176926ab959f:0x209df1c8627f91a3!2s4025+Mechanicsville+Turnpike,+Richmond,+VA+23223!3b1!4m7!1m0!1m5!1m1!1s0x89b1176926ab959f:0x209df1c8627f91a3!2m2!1d-77.393072!2d37.5797219" target="_blank"><img src="~/images/map-midlo.jpg" width="90%"></a> 
                        </div>                        
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <small class="copy">Copyright © 2014 Bates Orthodontics</small>
                        </div>
                    </div>
                    <div class="row">
                        @Html.ActionLink("Sponsorship Request", "SponsorshipRequest", "Home")
                        @Html.ActionLink("Refer a Patient", "DoctorReferral", "Home")
                    </div>
                </div>
            </footer><!-- /#footer -->

        </div>

    </div><!-- /#wrapper -->
    <script src='@Url.Content("~/Scripts/jquery-1.10.2.min.js")' type="text/javascript"></script>
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script> 
    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/bootstrap")    

    <!-- Scripts -->
                
    <script src='@Url.Content("~/Scripts/jquery.flexslider-min.js")'></script>     
    <script src='@Url.Content("~/Scripts/bootstrap-datepicker.js")'></script>
    <script src='@Url.Content("~/Scripts/jquery.validate.min.js")'></script>
    <script src='@Url.Content("~/Scripts/global.js")'></script>

    <script type="text/javascript" charset="utf-8">
        $(window).load(function() {
            $('.flexslider').flexslider({
                controlNav: false,
            });
        });

        $(function () {
            $('#myTab a:first').tab('show')
        });

        $('.collapse').collapse('toggle');
        $('.input-group.date').datepicker();

        
    </script>    

</body>
</html>
